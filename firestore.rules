rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // PROFIL UŻYTKOWNIKA — zostawiasz jak chcesz (tu przykład „właściciel tylko”)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // RIDES — PUBLICZNE ODCZYTY, ZAPISY ZABLOKOWANE
    match /rides/{rideId} {
      // każdy może pobierać dokument i robić zapytania (list/query)
      allow read: if true;

      // nikt nie może pisać
      allow write: if false;
    }

    // OCENY RIDE — też publiczne odczyty (jeśli chcesz)
    match /rides/{rideId}/ratings/{ratingId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}
