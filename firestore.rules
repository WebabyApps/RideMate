
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow public read of user profiles.
      allow read: if true;
      // Allow users to create and update their own profile.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /rides/{rideId} {
      // Allow public read of all rides.
      allow read: if true;

      // Allow authenticated users to create rides for themselves.
      allow create: if request.auth != null && request.resource.data.offererId == request.auth.uid;

      // Allow the ride offerer to update or delete the ride.
      allow update, delete: if request.auth != null && resource.data.offererId == request.auth.uid;
    }
  }
}
