rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow anyone to read any profile (for driver info), but only users can write to their own.
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /rides/{rideId} {
      allow read: if true;
      allow update, create: if request.auth != null;

      match /bookings/{bookingId} {
        // Allow anyone to see the list of bookings for a ride.
        allow list, get: if true;
        // Allow a user to create a booking only for themselves.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Allow a user to delete their own booking.
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }
    
    // Allow users to list their own bookings across all rides.
    match /{path=**}/bookings/{bookingId} {
      allow list: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
